<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <!-- this view reveals when swipe right -->
    <RelativeLayout
        android:tag="reveal-right"
        android:id="@+id/revealRight"
        android:background="@color/primary_material_light_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_archive_black_24dp"/>
    </RelativeLayout>


    <!-- this view reveals when swipe left -->
    <RelativeLayout
        android:tag="reveal-left"
        android:id="@+id/revealLeft"
        android:background="@color/primary_material_light_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_archive_black_24dp"/>
    </RelativeLayout>


    <!-- this is the item front view -->
    <RelativeLayout
        android:tag="front"
        android:id="@+id/front"
        android:background="?android:attr/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="88dp"
            android:id="@+id/recycler_text_view"
            android:paddingRight="16dp">

            <Space
                android:layout_width="12dp"
                android:layout_height="72dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/circleImageView"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_contact_picture" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="72dp" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vertical_container"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:showDividers="end">

                <TextView
                    android:id="@+id/nameDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Example application"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/messageContentDisplay"
                    android:layout_width="fill_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="testing this text"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateDisplay"
                        android:text="11/11/11"
                        android:paddingEnd="20dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timeDisplay"
                        android:text="11:11 PM"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>


